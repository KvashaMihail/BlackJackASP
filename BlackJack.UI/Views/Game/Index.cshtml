@model string
@{
    ViewData["Title"] = "Game Menu";
    Layout = "_Layout";
}

<div class="alert alert-primary">Welcome to the game, @Model</div>
<form method="post" asp-controller="Game" asp-action="StartGame">
    <div class="form-group">
        <label class="bj-centered-control" for="exampleFormControlSelect1">Bots count:</label>
        <select class="form-control bj-centered-control" id="exampleFormControlSelect1">
            @for (int i = 0; i <= 7; i++)
            {
                <option>@i</option>
            }
        </select>
        <input type="submit" class="btn btn btn-outline-success bj-centered-control" value="Start Game" />
    </div>
</form>


