
@model LoginPlayerModel

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<form method="post" asp-controller="Home" asp-action="Login">
    <div class="text-danger" role="alert" asp-validation-summary="All"></div>
    <div class="form-group bj-centered-block">
        <label class="bj-centered-control" asp-for="Login"></label><br />
        <input class="form-control bj-centered-control" asp-for="Login" />
    </div>
    <div class="form-group bj-centered-block">
        <label class="bj-centered-control" asp-for="Password"></label><br />
        <input class="bj-centered-control form-control" asp-for="Password" />
    </div>
    <div class="form-group bj-centered-block">
        <input type="submit" class="btn btn btn-outline-success bj-centered-control" value="Login" />
    </div>
</form>