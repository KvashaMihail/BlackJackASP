
@model RegisterPlayerModel

@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
}

<form method="post" asp-controller="Home" asp-action="Register" >
    <div class="text-danger" role="alert" asp-validation-summary="All"></div>
    <div class="form-group bj-centered-block">
        <label class="bj-centered-control" asp-for="Name"></label><br />
        <input class="form-control bj-centered-control" asp-for="Name" />
    </div>
    <div class="form-group bj-centered-block">
        <label class="bj-centered-control" asp-for="Password"></label><br />
        <input class="bj-centered-control form-control" asp-for="Password" />
    </div>
    <div class="form-group bj-centered-block">
        <label class="bj-centered-control" asp-for="PasswordConfirm"></label><br />
        <input class="bj-centered-control form-control" asp-for="PasswordConfirm" />
    </div>
    <div class="form-group bj-centered-block">
        <input type="submit" class="btn btn btn-outline-primary bj-centered-control" value="Register" />
    </div>
</form>
