
@model IEnumerable<PlayerViewModel>

@{
    ViewBag.Title = "Player Menu";
    Layout = "_Layout";
}

<form method="get" asp-controller="Home" asp-action="Register">
    <input type="submit" style="width: 250px" class="btn btn btn-outline-primary bj-centered-control" value="Register" />
</form>
<form method="get" asp-controller="Home" asp-action="Login">
        <input type="submit" style="width: 250px" class="btn btn btn-outline-success bj-centered-control" value="Login" />
    </form>
@*<button asp-controller="Home" asp-action="Register" value="Register" class="btn btn btn-outline-primary bj-centered-control">Register</button>
<button formmethod="post" asp-controller="Home" asp-action="Login" class="btn btn btn-outline-success bj-centered-control">Login</button>*@

<table class="table">
    <tr>
        <th>Players</th>
    </tr>
    @foreach (var player in Model)
    {
        <tr>
            <td>@Html.DisplayFor(model => player.Name)</td>
        </tr>
    }
</table>